<van-nav-bar title="积分兑换" border="{{none}}" custom-style="background: #f1f1f1;">
  <van-icon name="arrow-left" slot="left" bind:tap="onBack" size="20" />
</van-nav-bar>

<view style="height: calc(100vh - {{navBar.navBarHeight}}px)" class="p-kami-container">
  
  <van-field
    value="{{ kami }}"
    clearable
    placeholder="请输入兑换码"
    size="large"
    border="{{ false }}"
    bind:change="handleKamiChange"
  />

  <van-button
    loading="{{ loading }}"
    custom-class="p-kami-btn"
    block
    hairline
    type="info"
    size="default"
    bind:tap="usekami"
    loading-text="激活兑换码"
    color="linear-gradient(to right top, rgb(127, 0, 255), rgb(225, 0, 255))"
    round
  >
    激活兑换码
  </van-button>
</view>

<van-toast id="van-toast" />
