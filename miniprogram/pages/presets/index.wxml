<t-navbar style="--td-navbar-bg-color: #f1f1f1;">
  <t-icon
    name="add-circle"
    bind:click="handleClickAddPresets"
    color="#4d4d4d"
    slot="left"
    size="24"
  />
  <view slot="title" class="p-presets-nav-container">
    <view
      data-tab="mineApps"
      class="p-presets-nav-item {{ activeKey === 'mineApps' ? 'p-presets-nav-item-active' : '' }}"
      bind:tap="handleClickActiveTab"
    >
      我的
    </view>
    <view
      data-tab="list"
      class="p-presets-nav-item {{ activeKey === 'list' ? 'p-presets-nav-item-active' : '' }}"
      bind:tap="handleClickActiveTab"
    >
      官方
    </view>
  </view>
</t-navbar>

<view
  class="p-presets-container"
  style="height: calc(100vh - {{navBar.navBarHeight + bottomSafeHeight + 54}}px)"
>
  <t-search
    background="#f1f1f1"
    placeholder="搜索"
    clearable
    t-class="p-presets-search"
    value="{{ query }}"
    bind:change="handleQueryChange"
    bind:confirm="searchPresets"
    bind:blur="searchPresets"
    bind:clear="searchPresets"
    t-class-input-container="p-presets-search-input"
  />
  <view class="p-presets-list" style="max-height: calc(100vh - {{navBar.navBarHeight + 148}}px)">
    <view
      wx:for="{{presets}}"
      wx:key="id"
      wx:for-item="item"
      bind:tap="handleClickPreset"
      data-id="{{ item.id }}"
    >
      <t-cell
        title="{{item.name}}"
        description="{{item.des}}"
        align="top"
        image="{{item.coverImg}}"
        hover
      />
    </view>
  </view>
</view>